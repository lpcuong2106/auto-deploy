{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "extends": "eslint:recommended",
  "rules": {
      "semi": ["error","always"],
      "indent": ["error", 2],
      "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
      "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }]
  },
  "plugins": [
    // "ejs"
  ],
  "ignorePatterns": [
    "node_modules/"
  ]
}